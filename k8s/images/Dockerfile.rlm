FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install RLM package and kubernetes client
COPY . /app/rlm-src
RUN pip install --no-cache-dir /app/rlm-src[kubernetes] && \
    rm -rf /app/rlm-src

# Copy coordinator script
COPY k8s/coordinator/coordinator.py /app/coordinator.py

CMD ["python", "/app/coordinator.py"]
